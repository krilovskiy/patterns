{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "types": [
      "node"
    ],
    "outDir": "build/",
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "./"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}